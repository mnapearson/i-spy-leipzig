rules_version = '2';
service cloud.firestore {

	match /databases/{database}/documents {
    match /{document=**} {
      allow read;
      allow write: if request.auth.uid != null
    }
    
    match /posts/{post} {
    	allow update, delete: if resource.data.author == request.auth.uid;
      allow create: if request.resource.data.author == request.auth.uid;
    }
   
     match /profiles/{profile} {
    	allow update, delete: if resource.id == request.auth.uid;
      allow create: if request.resource.id == request.auth.uid;
    }
  }
}